<?php if(count($this->getItemCollection()->getItems())): ?>
<div class="page-title"><h2>Customers who bought this product also bought these...</h2></div>
<div class="product-list">
    <ul id="upsell" class="jcarousel-skin-tango">
    <?php $this->resetItemsIterator() ?>
    <?php for($_i=0;$_i<$this->getRowCount();$_i++): ?>
        <?php for($_j=0;$_j<$this->getColumnCount();$_j++): ?>
            <?php if($_link=$this->getIterableItem()): ?>
            	<li>
                    <a href="<?php echo $_link->getProductUrl() ?>"><img src="<?php echo $this->helper('catalog/image')->init($_link, 'thumbnail')->resize(114,108) ?>" width="125" height="125" alt="<?php echo $this->htmlEscape($_link->getName()) ?>" /></a>
                    <h3><a href="<?php echo $_link->getProductUrl() ?>"><?php echo $this->htmlEscape($_link->getName()) ?></a></h3>
                    <?php echo $this->getPriceHtml($_link, true, '-upsell') ?>
                </li>                
            <?php endif; ?>
        <?php endfor; ?>
    <?php endfor; ?>
	</ul>
</div>
<?php endif ?>
<?php if(count($this->getItemCollection()->getItems()) > 5): ?>
<script type="text/javascript">
jQuery(document).ready(function() {
	jQuery('.product-list ul#upsell').jcarousel({scroll:1});
});
</script>
<?php endif ?>