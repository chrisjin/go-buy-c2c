<?php

    $_product = $this->getProduct();

    $_helper = $this->helper('catalog/output');

?>



<div class="product-img-box">

    <div class="img-main">
    	<a href="<?php echo $this->helper('catalog/image')->init($_product, 'image'); ?>" rel="fancybox" class="zoom-new"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'image')->resize(348,340); ?>" alt="<?php echo $this->htmlEscape($this->getImageLabel()); ?>" /></a>
    </div>

    <div id="thumbs-list">

    <?php if (count($this->getGalleryImages()) > 0): ?>

        <ul class="jcarousel-skin-tango">

        	<?php foreach ($this->getGalleryImages() as $_image): ?>

            <li>
            <a rel="fancybox" class="zoom-new" href="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile()); ?>">
            <img width="90" height="98" src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(90,98); ?>" alt="<?php echo $this->htmlEscape($_image->getLabel()) ?>" />
            </a>
            </li>

           	<?php endforeach; ?>

        </ul>

    <?php endif; ?>

    </div>

</div>

<script type="text/javascript">
	jQuery('.zoom-new').fancybox({cyclic: true});
</script>