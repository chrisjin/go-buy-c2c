<script type="text/javascript">

jQuery(document).ready(function($) {

    var str = $('#newsletter').val();

	$('#newsletter').bind('click', function() {
		if($(this).val() == 'Your email address')
		{
			$(this).val("");		
		}
	});	
	$('#newsletter').focusout(function() {
		if($(this).val() == '')
		{
			$(this).val(str);
		}
	});
});
</script>
